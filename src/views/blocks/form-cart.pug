- var blockName = "form-cart"
include ./block-init.pug

form.form-cart(class=[mix, mod], method="GET", action="https://echo.htmlacademy.ru")
  ul.form-cart__product-list
    each product in user.products
      li.form-cart__product-item
        button.form-cart__product-erase
        img.form-cart__product-img(src=product.imgURL, alt=product.name)
        span.form-cart__product-title #{product.title}
        span.form-cart__product-weight #{product.weight} кг
        span.form-cart__product-multiply x
        span.form-cart__product-cost #{product.cost} руб.
        span.form-cart__product-price #{product.fullPrice} руб.
  .form-cart__wrap-right
    span.form-cart__total-price Итого: #{user.totalPrice} руб.
    a.button.form-cart__button(href="#") Оформить заказ
